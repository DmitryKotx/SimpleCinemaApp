<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content" android:shape="rectangle">
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#0094FF" />
            <gradient android:angle="-90" android:endColor="#0094FF" android:startColor="#0094FF" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#0094FF" />
            <solid android:color="#0094FF"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="100dip" />
            <stroke android:width="1dip" android:color="#0094FF" />
            <gradient android:angle="-90" android:startColor="#0094FF" android:endColor="#0094FF" />
        </shape>
    </item>
</selector>